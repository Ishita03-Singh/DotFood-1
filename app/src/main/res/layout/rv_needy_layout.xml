<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/help_card"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_h"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/humger"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/title_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Need Food"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/description_helpers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:text="We provide food to poor people.We have served 1000 + of poor till now"
                android:layout_marginTop="5dp" />


            <TextView
                android:id="@+id/address_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gurugram sec 9"
                android:layout_marginTop="5dp" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>